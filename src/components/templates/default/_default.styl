.t-default
  &__section
    width 100%
    max-width 1000px
    margin 0 auto 150px

    &--cover
      max-width initial
      max-width auto
      height 100%

    &--full-width
      max-width initial
      max-width auto

    &--wrapped
      padding 60px
      box-sizing border-box
      background-color #0075a9

    &:not(&--wrapped) .a-heading
      text-align center

      &::before
        content ''
        position absolute;
        width 240px
        height 240px
        left calc(50% - 120px)
        top calc(50% - 120px)
        border-radius 50%
        z-index -1
        background-color #0075a9
