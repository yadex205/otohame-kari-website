.p-top-intro
  &__text-wrapper
    position relative
    padding 180px 0

    &::before
      content: ''
      position absolute
      width 100%
      height 100%
      top 0
      left 0
      transform skewY(10deg)
      z-index -1
      background-color #0075a9

  &__text
    width 100%
    max-width 1000px
    margin 0 auto
    padding 0 60px
    box-sizing border-box
    line-height 32px
    font-size 20px
    color #fff

.p-top-credit
  display flex
