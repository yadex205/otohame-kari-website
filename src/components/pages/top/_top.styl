.p-top-intro
  &__text-wrapper
    position relative
    padding 180px 0

    &::before
      content: ''
      position absolute
      width 100%
      height 100%
      top 0
      left 0
      transform skewY(10deg)
      z-index -1
      background-color #0075a9

  &__text
    width 100%
    max-width 1000px
    margin 0 auto
    padding 0 60px
    box-sizing border-box
    line-height 32px
    font-size 20px
    color #fff

.p-top-credit
  display flex

  &__logo-wrapper
    display flex
    flex 0 0 50%
    justify-content center
    align-items center

  &__logo
    display block
    width 200px

  &__team
    flex 0 0 50%

    &-member
      display flex
      align-items center

      & + &
        margin-top 40px

      &-icon
        display block
        width 64px
        height 64px
        margin-right 20px
        border-radius 50%
        background-color #fff

      &-role
        display block
        margin-right 20px
        color #fff

      &-name
        display block
        color #fff
